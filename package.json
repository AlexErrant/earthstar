{
  "name": "keywing",
  "version": "0.3.0",
  "description": "A distributed, syncable key-value store",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "clean": "rm -rf build/*.{js,ts} .nyc_output coverage",
    "build": "tsc",
    "watch-test": "onchange --initial --kill --delay 1000 src/*.ts -- npm run build-and-test",
    "start": "node build/main.js",
    "prettier": "prettier --write src/*",
    "test": "tap -Rspecy --jobs=1 build/*.test.js",
    "test-sqlite": "tap -Rspecy --jobs=1 build/keywingStoreSqlite.test.js",
    "test-coverage": "npm test -- --coverage-report=lcov",
    "build-and-test": "npm run build && npm run test",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "author": "Cinnamon <cinnamon_npm@fastmail.com>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/better-sqlite3": "^5.4.0",
    "@types/node": "^14.0.3",
    "@types/tap": "^14.10.0",
    "onchange": "^7.0.2",
    "prettier": "^2.0.5",
    "tap": "^14.10.7",
    "typescript": "^3.9.2"
  },
  "dependencies": {
    "better-sqlite3": "^7.0.1",
    "chalk": "^3.0.0",
    "tslib": "^2.0.0"
  }
}
